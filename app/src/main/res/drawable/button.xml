<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@android:color/darker_gray" />
            <padding
                android:left="@dimen/margin_result"
                android:right="@dimen/margin_result"
                android:top="@dimen/margin_result"
                android:bottom="@dimen/margin_result"/>
        </shape>
    </item>

    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorAccent" />
            <stroke android:color="@color/colorPrimary" android:width="@dimen/result_corner_radius" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/colorPrimary" />
            <stroke android:color="@color/colorPrimaryDark" android:width="@dimen/result_stroke_width" />
        </shape>
    </item>

</selector>